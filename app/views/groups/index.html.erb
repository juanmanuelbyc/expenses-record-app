<section>
  <div class="vert">
    <div>
      <% if user_signed_in? %>
        <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn" %>
      <% end %>
    </div>

    <div>
      <h2>Categories</h2>
    </div>
  </div>

  <div>
    <h6>You Signed in as: <%= @user.name %></h6>
  </div>

  <div class="">
    <%= link_to 'Add a New Category', new_group_path, class: ""%>
  </div>

  <div class="vert">
      <% @groups.each do |group| %>
        <%= render "group_card", group: group %>
      <% end %>
  </div>

  <div class="">
    <%= link_to 'Add a New Category', new_group_path, class: ""%>
  </div>
</section>
