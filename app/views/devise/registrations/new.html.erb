<section class="bkg1 full-scrn flex vert">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <nav class="navbar">
      <div>
      <%= link_to " â‡¦ ", unauthenticated_root_path, :class => 'back-arrow' %>
      </div>

      <div>
      <h2 class="text-white">SIGNUP</h2>
      </div>

      <div class="actions">
      <%= f.submit "Sign Up", :class => 'btn btn3'%>
      </div>
    </nav>

    <div class="field">
      <%= f.text_field :name, placeholder: "Name", :class => 'field1' %>
    </div>
    <hr>
    <div class="field">
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", :class => 'field1' %>
    </div>
    <hr>
    <div class="field">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", :class => 'field1' %>
    </div>
    <hr>
    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "new-password", :class => 'field1' %>
    </div>

    <% if @minimum_password_length %>
      <div class="text1">(<%= @minimum_password_length %> characters min)</div>
    <% end %><br />
  <% end %>
</section>
