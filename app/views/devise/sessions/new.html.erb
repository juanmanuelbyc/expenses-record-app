<section class="bkg1 full-scrn flex vert">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <nav class="navbar">
      <div>
        <%= link_to " â‡¦ ", unauthenticated_root_path, :class => 'back-arrow' %>
      </div>

      <div>
        <h2 class="text-white">LOGIN</h2>
      </div>

      <div class="actions">
          <%= f.submit "Log in", :class => 'btn btn3'%>
      </div>
    </nav>

    <div class="field">
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", :class => 'field1' %>
    </div>

    <hr>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", :class => 'field1' %>
    </div>

    <div class="text1">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot password ?", new_password_path(resource_name), :class => 'text1' %><br />
      <% end %>
    </div>
  <% end %>
</section>
